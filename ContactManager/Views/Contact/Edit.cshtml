@model ContactManager.Models.ViewModels.AddContactVM@{     string title = ViewBag.Action + " Contact";     ViewBag.Title = title;}<h2>@ViewBag.Title</h2><form asp-controller="Contact" asp-action="Edit" method="post">    <div asp-validation-summary="All" class="text-danger"></div>    <input asp-for="@Model.Contact.ContactId" type="hidden" />    @*<input asp-for="@Model.Contact.CategoryId" type="hidden" />*@    <div class="form-group">        <label asp-for="@Model.Contact.FirstName">First Name</label>        <input asp-for="@Model.Contact.FirstName" class="form-control">    </div>    <div class="form-group">        <label asp-for="@Model.Contact.LastName">Last Name</label>        <input asp-for="@Model.Contact.LastName" class="form-control">    </div>    <div class="form-group">        <label asp-for="@Model.Contact.PhoneNumber">Phone Number</label>        <input asp-for="@Model.Contact.PhoneNumber" class="form-control">    </div>    <div class="form-group">        <label asp-for="@Model.Contact.Email">Email</label>        <input asp-for="@Model.Contact.Email" class="form-control">    </div>    <div class="form-group">        <label asp-for="@Model.Contact.Category.Name">Category</label>        <select asp-for="@Model.Contact.CategoryId" class="form-control" asp-items="@Model.CategoryList">        </select>    </div>    <div class="form-group">        <label asp-for="@Model.Contact.Organization">Organization</label>        <input asp-for="@Model.Contact.Organization" class="form-control">    </div>    <button type="submit" class="btn btn-primary">Update</button>    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a></form>